<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThreeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/verylightBlue"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="75dp"
            app:cardElevation="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:id="@+id/card">
            <ImageView
                android:id="@+id/userImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/user_basic"
                android:scaleType="centerCrop"
            />
        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/galleryButton"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/hangual"
            android:backgroundTint="@color/mediumBlue"
            android:layout_height="wrap_content"
            android:text="프로필 사진 교체"
            android:layout_marginTop="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hangual"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/profile"
            android:text="님" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/hangual"
            android:textSize="30dp"
            android:layout_marginBottom="40dp"
            android:id="@+id/date"
            android:text="내 관심 복지 목록" />

    </LinearLayout>


</LinearLayout>
